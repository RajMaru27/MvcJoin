@model MVCjoin.Models.StudentList
@using System.Data;
@{
    ViewBag.Title = "Listing";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<a href="@Url.Action("Index")" class="btn btn-primary">Add</a>
@TempData["Add"]
<br />
@TempData["Delete"]
<br />
@TempData["Edit"]
<br />
<main>
    <table class="table">
        <thead>
            <tr>
                @foreach (DataColumn dc in Model.Stable.Columns)
                {
                    <td scope="col">
                        @dc.ColumnName
                    </td>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow dr in Model.Stable.Rows)
            {
                <tr>
                    @foreach (DataColumn dc in Model.Stable.Columns)
                    {
                        <td>
                            @dr[dc.ColumnName]
                        </td>
                    }
                    <td><a href="@Url.Action("Delete", new {Id = dr["StudentId"] })"> Delete </a></td>
                    <td><a href="@Url.Action("Edit", new {Id = dr["StudentId"] })"> Edit </a></td>
                </tr>
            }
        </tbody>
    </table>
</main>
